{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES6",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "isolatedModules": true,
    "noEmitOnError": true,
    "noEmit": true,
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/ui/*": ["ui/*"],
      "@/features/*": ["features/*"],
      "@/constants/*": ["constants/*"],
      "@/generated/*": ["generated/*"],
      "@/shared/*": ["shared/*"],
      "@/pages/*": ["pages/*"],
      "@/i18n/*": ["i18n/*"]
    }
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules"]
}
